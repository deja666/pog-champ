<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.pogchamp.lolchampions">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.pogchamp.lolchampions.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/akb"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/akb"
        android:supportsRtl="true"
        android:theme="@style/Theme.LOLChampions"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">
        <activity
            android:name="org.pogchamp.lolchampions.presentation.ui.view.DetailActivity"
            android:exported="false" />
        <activity
            android:name="org.pogchamp.lolchampions.presentation.ui.view.MainActivity"
            android:exported="false">
        </activity>
        <activity
            android:name="org.pogchamp.lolchampions.presentation.ui.view.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>